<h1> Add to Product to Inventory list </h1>

<%= form_tag '/fishes', method: :post do %>
<h3>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  
     <div>
      <%= label_tag :price %>
      <%= text_field_tag :price %>
    </div>

    <div>
      <%= label_tag :image %>
      <%= text_field_tag :image %>
    </div>
    
    <div>
      <%= label_tag :supplier %> 
      <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %> 
    </div>
      <div>
        <%= label_tag :description %>
        <%= text_field_tag :description %>
      </div>

  <%= submit_tag "Update" %>

</h3>
<% end %>