<h1>Edit Suppliers</h1>

<%= form_tag "/suppliers/#{@supplier[:id]}", method: :patch do %>

  <h3>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, supplier.name %>
    </div>

    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email, supplier.email %>
      </div>

      <div>
      <%= label_tag :phone %>
      <%= text_field_tag :email, supplier.email %>
      </div>

      <% submit_tag 'Update Suppliers' %>
      </h3>
      
<% end %>
